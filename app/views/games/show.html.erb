<div class="text-center">
  <br>
  <%= @game.name %>
  <br>
  <%= @game.game_status %>
</div>

<table cellspacing="0" cellpadding="0" class="chessboard">
  <% 7.downto(0) do |row| %>
    <tr>
      <% 0.upto(7) do |col| %>
        <td class="text-center">
          <%=
            if (props = piece_at_location?(@game.all_pieces, row, col))
              color = props[0]
              type = props[1]
              image_tag("#{color}-#{type}.svg")
            else
            end
          %>
        </td>
      <% end %>
    </tr>
  <% end %>
</table>
